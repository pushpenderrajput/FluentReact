.app-container {
  display: flex;
  height: 100vh;
  overflow: hidden;
}
.content {
  flex-grow: 1;
  padding: 20px;
  overflow-y: auto;
  background-color: #f4f4f4;
  height: 100vh;
}

.navItem button{
  height: "calc(100vh - 50px)";
  overflow-y: "auto";
  width:"241px";
  transition: transform 0.2s ease;
  
}
.navItem button:hover{
  transform: scale(1.01);
  box-shadow: 0px 0px 8px 2px #d2d2d2;
}

